{
  "name": "is-even-mcp",
  "version": "4.2.0",
  "description": "Helps you know whether a number is even or not.",
  "private": false,
  "type": "module",
  "bin": {
    "is-even": "build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
